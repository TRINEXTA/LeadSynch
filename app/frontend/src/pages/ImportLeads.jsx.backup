import React, { useState } from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Upload, FileSpreadsheet, CheckCircle, AlertCircle, ArrowLeft } from "lucide-react";
import { Badge } from "@/components/ui/badge";

const SECTEURS_MAPPING = {
  juridique: { label: "Juridique / Légal", icon: "⚖️", color: "blue" },
  comptabilite: { label: "Comptabilité", icon: "💼", color: "green" },
  sante: { label: "Santé", icon: "🏥", color: "red" },
  informatique: { label: "Informatique / IT", icon: "💻", color: "purple" },
  btp: { label: "BTP / Construction", icon: "🏗️", color: "orange" },
  hotellerie: { label: "Hôtellerie-Restauration", icon: "🏨", color: "pink" },
  immobilier: { label: "Immobilier", icon: "🏢", color: "yellow" },
  logistique: { label: "Logistique / Transport", icon: "🚚", color: "indigo" },
  commerce: { label: "Commerce / Retail", icon: "🛒", color: "cyan" },
  education: { label: "Éducation", icon: "📚", color: "teal" },
  consulting: { label: "Consulting", icon: "💡", color: "amber" },
  rh: { label: "Ressources Humaines", icon: "👥", color: "lime" },
  services: { label: "Services", icon: "🔧", color: "gray" },
  industrie: { label: "Industrie", icon: "🏭", color: "slate" },
  automobile: { label: "Automobile", icon: "🚗", color: "red" },
  autre: { label: "Autre", icon: "📁", color: "gray" }
};

export default function ImportLeads() {
  const [step, setStep] = useState(1); // 1: Upload, 2: Analyse, 3: Validation
  const [file, setFile] = useState(null);
  const [analysisResult, setAnalysisResult] = useState(null);
  const [loading, setLoading] = useState(false);
  const [databaseName, setDatabaseName] = useState('');
  const [databaseDescription, setDatabaseDescription] = useState('');

  const handleFileSelect = (e) => {
    const selectedFile = e.target.files[0];
    if (selectedFile && selectedFile.name.endsWith('.csv')) {
      setFile(selectedFile);
      setDatabaseName(selectedFile.name.replace('.csv', ''));
    } else {
      alert('Veuillez sélectionner un fichier CSV');
    }
  };

  const handleDragOver = (e) => {
    e.preventDefault();
  };

  const handleDrop = (e) => {
    e.preventDefault();
    const droppedFile = e.dataTransfer.files[0];
    if (droppedFile && droppedFile.name.endsWith('.csv')) {
      setFile(droppedFile);
      setDatabaseName(droppedFile.name.replace('.csv', ''));
    }
  };

  const analyzeFile = async () => {
    if (!file) return;

    setLoading(true);
    setStep(2);

    const formData = new FormData();
    formData.append('file', file);

    try {
      const response = await fetch('http://localhost:3000/api/leads/analyze-csv', {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${localStorage.getItem('token')}`
        },
        body: formData
      });

      const data = await response.json();
      
      if (data.success) {
        setAnalysisResult(data.analysis);
        setStep(3);
      } else {
        alert('Erreur lors de l\'analyse : ' + (data.error || 'Erreur inconnue'));
        setStep(1);
      }
    } catch (error) {
      console.error('Erreur analyse:', error);
      alert('Erreur lors de l\'analyse du fichier');
      setStep(1);
    } finally {
      setLoading(false);
    }
  };

  const createDatabase = async () => {
    if (!analysisResult || !databaseName) return;

    setLoading(true);

    try {
      const response = await fetch('http://localhost:3000/api/leads/import-csv', {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${localStorage.getItem('token')}`,
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          name: databaseName,
          description: databaseDescription,
          source: 'import_csv',
          fileName: file.name,
          leads: analysisResult.leads,
          segmentation: analysisResult.segmentation
        })
      });

      const data = await response.json();
      
      if (data.success) {
        alert(`✅ Base créée avec succès ! ${analysisResult.totalLeads} leads importés.`);
        window.location.href = '/lead-databases';
      } else {
        alert('Erreur lors de la création : ' + (data.error || 'Erreur inconnue'));
      }
    } catch (error) {
      console.error('Erreur import:', error);
      alert('Erreur lors de l\'import');
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="p-6 max-w-4xl mx-auto">
      {/* Header */}
      <div className="mb-6">
        <Button variant="ghost" onClick={() => window.history.back()} className="mb-2">
          <ArrowLeft className="w-4 h-4 mr-2" />
          Retour
        </Button>
        <h1 className="text-3xl font-bold">Importer des Leads</h1>
        <p className="text-gray-600">Importez vos leads depuis un fichier CSV</p>
      </div>

      {/* Progress Steps */}
      <div className="flex items-center justify-center mb-8">
        <div className="flex items-center gap-4">
          <div className={`flex items-center gap-2 ${step >= 1 ? 'text-blue-600' : 'text-gray-400'}`}>
            <div className={`w-8 h-8 rounded-full flex items-center justify-center ${step >= 1 ? 'bg-blue-600 text-white' : 'bg-gray-200'}`}>
              1
            </div>
            <span className="font-medium">Sélection</span>
          </div>
          <div className="w-16 h-1 bg-gray-200" />
          <div className={`flex items-center gap-2 ${step >= 2 ? 'text-blue-600' : 'text-gray-400'}`}>
            <div className={`w-8 h-8 rounded-full flex items-center justify-center ${step >= 2 ? 'bg-blue-600 text-white' : 'bg-gray-200'}`}>
              2
            </div>
            <span className="font-medium">Analyse</span>
          </div>
          <div className="w-16 h-1 bg-gray-200" />
          <div className={`flex items-center gap-2 ${step >= 3 ? 'text-blue-600' : 'text-gray-400'}`}>
            <div className={`w-8 h-8 rounded-full flex items-center justify-center ${step >= 3 ? 'bg-blue-600 text-white' : 'bg-gray-200'}`}>
              3
            </div>
            <span className="font-medium">Validation</span>
          </div>
        </div>
      </div>

      {/* Step 1: Upload */}
      {step === 1 && (
        <Card>
          <CardContent className="pt-6">
            <div
              onDragOver={handleDragOver}
              onDrop={handleDrop}
              className="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center hover:border-blue-500 transition-colors cursor-pointer"
              onClick={() => document.getElementById('file-input').click()}
            >
              <Upload className="w-16 h-16 mx-auto mb-4 text-gray-400" />
              {!file ? (
                <>
                  <p className="text-lg font-medium mb-2">Glissez-déposez votre fichier CSV ici</p>
                  <p className="text-sm text-gray-500 mb-4">ou cliquez pour sélectionner</p>
                  <Button className="bg-blue-600 hover:bg-blue-700">
                    Sélectionner un fichier
                  </Button>
                </>
              ) : (
                <div className="flex items-center justify-center gap-3">
                  <FileSpreadsheet className="w-8 h-8 text-green-600" />
                  <div className="text-left">
                    <p className="font-medium">{file.name}</p>
                    <p className="text-sm text-gray-500">{(file.size / 1024).toFixed(2)} KB</p>
                  </div>
                  <CheckCircle className="w-6 h-6 text-green-600" />
                </div>
              )}
              <input
                id="file-input"
                type="file"
                accept=".csv"
                onChange={handleFileSelect}
                className="hidden"
              />
            </div>

            {file && (
              <div className="mt-6 space-y-4">
                <div>
                  <label className="block text-sm font-medium mb-1">Nom de la base *</label>
                  <input
                    type="text"
                    required
                    className="w-full border rounded-lg px-3 py-2"
                    value={databaseName}
                    onChange={(e) => setDatabaseName(e.target.value)}
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium mb-1">Description</label>
                  <textarea
                    rows="2"
                    className="w-full border rounded-lg px-3 py-2"
                    value={databaseDescription}
                    onChange={(e) => setDatabaseDescription(e.target.value)}
                    placeholder="Décrivez cette base de données..."
                  />
                </div>

                <Button 
                  onClick={analyzeFile} 
                  className="w-full bg-blue-600 hover:bg-blue-700"
                  disabled={!databaseName}
                >
                  Analyser le fichier
                </Button>
              </div>
            )}

            <div className="mt-6 p-4 bg-blue-50 rounded-lg">
              <p className="text-sm font-medium text-blue-900 mb-2">📋 Format CSV attendu :</p>
              <code className="text-xs text-blue-800 block">
                company_name,email,phone,city,address,website
              </code>
              <p className="text-xs text-blue-600 mt-2">
                Notre IA détectera automatiquement le secteur d'activité de chaque entreprise !
              </p>
            </div>
          </CardContent>
        </Card>
      )}

      {/* Step 2: Analyzing */}
      {step === 2 && loading && (
        <Card>
          <CardContent className="pt-6 text-center py-12">
            <div className="animate-spin w-16 h-16 border-4 border-blue-600 border-t-transparent rounded-full mx-auto mb-4" />
            <p className="text-lg font-medium">Analyse en cours...</p>
            <p className="text-sm text-gray-500 mt-2">
              Notre IA analyse vos leads et détecte automatiquement les secteurs d'activité
            </p>
          </CardContent>
        </Card>
      )}

      {/* Step 3: Validation */}
      {step === 3 && analysisResult && (
        <div className="space-y-4">
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <CheckCircle className="w-6 h-6 text-green-600" />
                Analyse terminée !
              </CardTitle>
            </CardHeader>
            <CardContent>
              <div className="grid grid-cols-3 gap-4 mb-6">
                <div className="text-center p-4 bg-blue-50 rounded-lg">
                  <p className="text-3xl font-bold text-blue-600">{analysisResult.totalLeads}</p>
                  <p className="text-sm text-gray-600">Leads détectés</p>
                </div>
                <div className="text-center p-4 bg-green-50 rounded-lg">
                  <p className="text-3xl font-bold text-green-600">{analysisResult.validLeads}</p>
                  <p className="text-sm text-gray-600">Valides</p>
                </div>
                <div className="text-center p-4 bg-purple-50 rounded-lg">
                  <p className="text-3xl font-bold text-purple-600">
                    {Object.keys(analysisResult.segmentation || {}).length}
                  </p>
                  <p className="text-sm text-gray-600">Secteurs</p>
                </div>
              </div>

              <h3 className="font-semibold mb-3">Répartition par secteur :</h3>
              <div className="space-y-2">
                {Object.entries(analysisResult.segmentation || {})
                  .sort(([,a], [,b]) => b - a)
                  .map(([secteur, count]) => {
                    const secteurInfo = SECTEURS_MAPPING[secteur] || SECTEURS_MAPPING.autre;
                    const percentage = ((count / analysisResult.totalLeads) * 100).toFixed(1);
                    
                    return (
                      <div key={secteur} className="flex items-center gap-3">
                        <Badge variant="secondary" className="min-w-[200px]">
                          {secteurInfo.icon} {secteurInfo.label}
                        </Badge>
                        <div className="flex-1 bg-gray-200 rounded-full h-6 relative">
                          <div 
                            className={`bg-${secteurInfo.color}-500 h-6 rounded-full flex items-center justify-center text-white text-sm font-medium`}
                            style={{width: `${percentage}%`}}
                          >
                            {count}
                          </div>
                        </div>
                        <span className="text-sm font-medium text-gray-600 min-w-[50px]">
                          {percentage}%
                        </span>
                      </div>
                    );
                  })}
              </div>
            </CardContent>
          </Card>

          <div className="flex gap-3">
            <Button 
              variant="outline" 
              onClick={() => {
                setStep(1);
                setFile(null);
                setAnalysisResult(null);
              }}
              className="flex-1"
            >
              Annuler
            </Button>
            <Button 
              onClick={createDatabase}
              disabled={loading}
              className="flex-1 bg-green-600 hover:bg-green-700"
            >
              {loading ? 'Import en cours...' : 'Confirmer et créer la base'}
            </Button>
          </div>
        </div>
      )}
    </div>
  );
}
